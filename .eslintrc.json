{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:vue/essential",
        "eslint:recommended",
        "airbnb-base",
        "plugin:prettier/recommended",
        "astro"
    ],
    "parserOptions": {
        "ecmaVersion": 13,
        "parser": "@typescript-eslint/parser",
        "sourceType": "module"
    },
    "plugins": [
        "vue",
        "@typescript-eslint"
    ],
    "rules": {
        "prettier/prettier": [
            "error",{
                "endOfLine": "auto",
                "singleQuote": true,
                "printWidth": 120,
                "semi": false,
                "tabWidth": 2
            }],
        // Ici vous définissez vos règles de syntaxe
        // Retrouvez les règles sur la documentation d'ESLint
        "no-unused-vars": "warn",
        "no-console": "off",
        "func-names": "off",
        "no-process-exit": "off",
        "object-shorthand": "off",
        "class-methods-use-this": "off",
        "coma": ["error", "never"]
    },
}
